@model WorkItemViewModel

<style>
    .loader {
        position: relative;
    }

        .loader:after {
            background-color: rgba(0,0,0,.5);
            content: 'Saving... ';
            font-size: 1.7em;
            font-weight: bold;
            position: absolute;
            top: 0;
            left: 0;
            height: 100%;
            width: 100%;
            display: flex;
            -o-justify-content: center;
            -webkit-justify-content: center;
            justify-content: center;
            -ms-align-items: center;
            -o-align-items: center;
            -webkit-align-items: center;
            align-items: center;
            color: white;
        }

</style>

    <div id="workItemErrorSubmissionUpdateForm">

        <form action="@Url.Action("SaveWorkItem")" class="form-horizontal" name="formSubmitWithError" id="formSubmitWithError"
              enctype="multipart/form-data" method="post">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">

                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title">Submission Error Notes</h4>
                    </div>

                    <div class="modal-body">

                        @Html.AntiForgeryToken()

                        @*@Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Id)*@

                        <div class="form-group">
                            <label class="control-label">Notes</label>
                            @Html.TextBoxFor(m => m.Notes, null, new { @class = "form-control" })
                            @*<textarea class="form-control" placeholder="What happened?" id="Notes"></textarea>*@
                        </div>

                        <div class="form-group">
                            <label for="files" class="control-label">Upload Screenshots</label>
                            <input type="file" id="files" name="files" multiple="multiple" class="form-control" />
                        </div>

                    </div>

                    <div class="modal-footer">
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                <input type="submit" class="btn btn-primary" value="Save changes" />
                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </form>


</div>