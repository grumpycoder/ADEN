@{
    ViewBag.Title = "File Specifications2";
}

<section class="content-header">
    <div>
        <ul class="breadcrumb pull-right">
            <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">@ViewBag.CurrentView</li>
        </ul>
    </div>

</section>

<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">

                <div class="panel-heading">
                    <span class="panel-title">File Specifications</span>
                    <span class="panel-subtitle">Administrative definitions of the Federal Specifications</span>
                </div>


                <div class="panel-body">

                    @(Html.DevExtreme().DataGrid().ID("grid")
                                                  .OnEditorPrepared("editorPrepared")
                                                  .ShowRowLines(true)
                                                  .ShowBorders(true).FilterRow(filterRow => filterRow.Visible(true).ApplyFilter(GridApplyFilterMode.Auto))
                                                  .SearchPanel(searchPanel => searchPanel.Visible(true).Width(240).Placeholder("Search...")).HeaderFilter(headerFilter => headerFilter.Visible(true))
                                                  .Columns(c =>
                                                  {
                                                      c.Add().DataField("fileNumber");
                                                      c.Add().DataField("fileName").HidingPriority(2);
                                                      c.Add().DataField("isRetired").Caption("Retired?");
                                                      c.Add().DataField("fileNameFormat").HidingPriority(3);
                                                      c.Add().DataField("section");
                                                      c.Add().DataField("dataGroups").HidingPriority(2);
                                                      c.Add().DataField("reportAction").HidingPriority(4);
                                                      c.Add().DataField("application").HidingPriority(4);
                                                      c.Add().DataField("collection").HidingPriority(4);
                                                      c.Add().DataField("dataSource").HidingPriority(4);
                                                      c.Add().DataField("generationUserGroup").HidingPriority(1);
                                                      c.Add().DataField("approvalUserGroup").HidingPriority(1);
                                                      c.Add().DataField("submissionUserGroup").HidingPriority(1);
                                                      c.Add().Alignment(HorizontalAlignment.Center).CellTemplate(new JS("function(container, options) {createFileSpecificationGridActionButtons(container, options);}"));
                                                  })
                                                  .Paging(paging => paging.PageSize(10)).Pager(pager =>
                                                  {
                                                      pager.ShowPageSizeSelector(true);
                                                      pager.AllowedPageSizes(new List<int> { 5, 10, 20 });
                                                      pager.ShowInfo(true);
                                                  })
                                                  .DataSource(d => d.StaticJson().Url("/api/filespecification").Key("id")))
                </div>

            </div>
        </div>
    </div>
</section>

<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="EditModal" aria-hidden="true">
    <div id="editContainer">
    </div>
</div>
@section scripts
{
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/js/app/app.js"></script>
    <script src="~/js/app/fileSpecfication.js"></script>
}
