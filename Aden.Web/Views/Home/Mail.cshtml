@model IEnumerable<Aden.Web.ViewModels.MailViewModel>
@{
    ViewBag.Title = "Mail Messages";
}

<section class="content-header">
    <div>
        <ul class="breadcrumb pull-right">
            <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">@ViewBag.CurrentView</li>
        </ul>
    </div>

</section>

<section class="content">
    <div class="row">
        <div class="col-sm-12">
            @foreach (var message in Model)
            {
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <b>Email </b>
                        <span class="pull-right">Sent: @message.Sent</span>
                    </div>

                    <ul class="list-group">
                        <li class="list-group-item">
                            <div class="row">
                                <div class="col-sm-4"><b class="text-primary">From: </b> @message.From</div>
                                <div class="col-sm-4">
                                    <b class="text-primary">To: </b>
                                    @foreach (var recipient in message.To)
                                    {
                                        @recipient
                                    }
                                </div>
                                <div class="col-sm-4">
                                    <b class="text-primary">CC: </b>
                                    @foreach (var recipient in message.CC)
                                    {
                                        @recipient
                                    }
                                </div>
                            </div>
                        </li>
                        <li class="list-group-item">
                            <div class="row">
                                <div class="col-sm-12">
                                    <b class="text-primary">Subject: </b> @message.Subject
                                </div>
                            </div>
                        </li>
                        <li class="list-group-item">
                            <div class="row">
                                <div class="col-sm-12">
                                    <p>
                                        <a data-toggle="collapse" href="#@message.Id" aria-expanded="false" aria-controls="attachments"><b class="text-primary">Attachments: </b></a>
                                    </p>
                                    <div class="collapse" id="@message.Id">
                                        <div class="row">
                                            @foreach (var attachment in message.Attachments)
                                            {
                                                <div class="col-sm-3 col-md-3">
                                                    <div class="thumbnail">
                                                        <img src="data:image;base64,@Convert.ToBase64String(attachment.GetBytes())" alt="@attachment.Name" class="thumbnail" />
                                                        <div class="caption bg-primary">
                                                            <span class="bg-primary">
                                                                @attachment
                                                            </span>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </li>
                        <li class="list-group-item">
                            <span>@Html.Raw(@message.Body)</span>
                        </li>
                    </ul>
                </div>

            }
        </div>
    </div>

</section>