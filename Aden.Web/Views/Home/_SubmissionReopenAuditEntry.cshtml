@model SubmissionReopenAuditEntryDto

    <form id="form" name="form" role="form">
        @Html.HiddenFor(m => m.SubmissionId)
        <div class="form-group">
            <label class="control-label">
                New Submission Deadline
            <input type="date" class="form-control" id="nextSubmissionDate" name="nextSubmissionDate"/>
            </label>
        </div>
        <div class="form-group">
            <label class="control-label full-width">
                Description:
                <textarea class="form-control" id="description" name="message" placeholder="Enter details here..."></textarea>
            </label>
        </div>

    </form>