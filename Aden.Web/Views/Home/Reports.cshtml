@model IEnumerable<Report>
@{
    ViewBag.Title = "Reports";
}

<div class="panel panel-info">
    <div class="panel-heading">
        <h1 class="panel-title">Reports</h1>
    </div>
    <input type="hidden" value="@ViewContext.RouteData.Values["id"]" id="filespec" />
    <input type="hidden" value="@ViewContext.RouteData.Values["datayear"]" id="datayear" />
    <div class="panel-body">
        <table id="grid"
               data-detail-view="true"
               data-detail-formatter="detailFormatter"
               data-toggle="table"
               data-pagination=" true"
               data-page-size="5"
               data-page-list="[5,10,25,50]"
               data-pagination-first-text="First"
               data-pagination-pre-text="Previous"
               data-pagination-next-text="Next"
               data-pagination-last-text="Last"
               data-show-refresh="true"
               data-show-toggle="true"
               data-show-columns="true"
               data-show-pagination-switch="true"
               data-side-pagination="server"
               data-show-export="true"
               data-minimum-count-columns="2"
               data-search="true"
               data-search-on-enter-key="true"
               data-undefined-text=""
               data-filter-show-clear="true"
               data-filter-control="true">
            <thead>
                <tr>
                    <th data-field="fileSpecification.fileName" data-searchable="true" data-filter-control="input">File Name</th>
                    <th data-field="fileSpecification.fileNumber" data-filter-control="input">FileNumber</th>
                    <th data-field="fileSpecification.dataYear" data-filter-control="input">Data Year</th>
                    <th data-field="reportState" data-filter-control="input">State</th>
                    <th data-field="id" data-formatter="historyFormatter" data-align="center"></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Document</h4>
            </div>
            <div class="modal-body">
                ...
            </div>
            <div class="modal-footer">
                <a class="btn btn-primary" download="file.csv" href="/download/1079">Download</a>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="historyModal" tabindex="-1" role="dialog" aria-labelledby="historyModalLabel">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="historyModalLabel">Document</h4>
            </div>
            <div class="modal-body">
                ...
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script>

        function historyFormatter(value, row, index, field) {
            var id = row.fileSpecificationId;
            var dataYear = row.dataYear;
            var lnk = '<a href="/workitemhistory/' + dataYear + '/' + id + '" data-target="#historyModal" data-toggle="historymodal" ' +
                'data-url=/workitemhistory/' + dataYear + '/' + id + ' data-history="true" data-title="Work History" data-placement="left">' +
                '<i class="fa fa-history"></i></a>';
            return lnk;
        }

        function actionsFormatter(value, row, index, field) {
            var lnk = '';
            if (row.reportState !== 1) {
                lnk += '<a class="btn btn-default btn-sm" href="reports/' + row.fileNumber + '">Reports</a>';
            } else {
                lnk += '<button class="btn btn-default btn-sm" data-start data-filespec-id="' +
                    value +
                    '">Start</button>';
                lnk += '<button class="btn btn-default btn-sm" data-waiver data-filespec-id="' +
                    value +
                    '">Waiver</button>';
            }
            return lnk;
        }

        function detailFormatter(index, row) {
            var html = [];
            html.push('<ul class="list-inline">');
            row.documents.forEach(function (doc) {
                html.push(
                    '<li>' +
                    '<a href="#myModal" data-target="#myModal" data-doc-id="' + doc.id + '" data-doc-title="' + doc.filename + '" data-toggle="modal" data-url="/document/' + doc.id + '">' +
                    '<i class="glyphicon glyphicon-file"></i>' + doc.filename + '</a>' +
                    '</li>');
            });
            html.push('</ul>');
            return html.join('');
        }

        $(function () {
            console.log('ready');

            var $table = $('#grid');

            var filespec = $('#filespec').val();
            var datayear = $('#datayear').val();
            var options = $table.bootstrapTable('getOptions');

            if (filespec !== '') {
                options.url = '/api/reports/' + filespec + '/' + datayear;
                options.filterControl = false;
                options.showRefresh = false;
                options.showToggle = false;
                options.showColumns = false;
                options.showPaginationSwitch = false;
                options.search = false;
                options.sidePagination = 'client';
                $table.bootstrapTable('destroy').bootstrapTable({}, options);

                $table.bootstrapTable('refreshOptions', options);
                $table.bootstrapTable('refresh');
            } else {
                options.sidePagination = 'server';
                options.url = '/api/reports/search';
                $table.bootstrapTable('destroy').bootstrapTable({}, options);
                $table.bootstrapTable('refreshOptions', options);
                $table.bootstrapTable('refresh');
            }

            $(document).on('click',
                '[data-history]',
                function (e) {
                    var $currentTarget = $(e.currentTarget);
                    var targetModal = $currentTarget.data('target');

                    var remoteContent = $currentTarget.data('url');
                    var title = $currentTarget.data('doc-title');

                    var modal = $(targetModal);
                    var modalBody = $(targetModal + ' .modal-body');
                    var modalTitle = $(targetModal + ' .modal-title');
                    modalTitle.html(title);

                    modal.on('show.bs.modal', function () {
                        modalBody.load(remoteContent);
                    }).modal();
                    return false;
                });

            $(document).on('click', '[data-toggle="modal"]', function (e) {
                var $currentTarget = $(e.currentTarget);
                var targetModal = $currentTarget.data('target');

                var remoteContent = $currentTarget.data('url'); 
                var title = $currentTarget.data('doc-title');

                var modal = $(targetModal);
                var modalBody = $(targetModal + ' .modal-body');
                var modalTitle = $(targetModal + ' .modal-title');

                var id = $currentTarget.data('doc-id');

                modalTitle.html(title);

                modal.on('show.bs.modal', function () {
                    var lnk = $(this).find('a[download]');
                    lnk.attr('href', '/download/' + id);
                    modalBody.load(remoteContent);
                }).modal();
                return false;
            });



        });
    </script>
}
