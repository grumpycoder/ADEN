@model List<ReportViewDto>
@{
    ViewBag.Title = "Files";
    int count = 0; 
}


<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">

                <div class="panel-heading">
                    <span class="panel-title"> Files</span>
                    <span class="panel-subtitle">Eden report generation and submission results</span>
                </div>

                <div class="panel-body">
               
                    @foreach (var report in Model)
                    {
                        count +=1; 
                        <div class="row">
                            <div class="col-md-12">
                                <h3 class="alert alert-info">
                                    @report.DisplayFileName
                                    @if (count == 1 && Model.Count > 1)
                                    {
                                        <span>(Reopened Submission)</span>
                                    }
                                </h3>

                                <hr/>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <dl>
                                    <dt>Data Year</dt>
                                    <dd>@report.DisplayDataYear</dd>

                                    <dt>Status</dt>
                                    <dd>@report.ReportStateDisplay</dd>

                                    <dt>Generated</dt>
                                    <dd>
                                        @report.GeneratedDate
                                        @if (!report.GeneratedDate.HasValue)
                                        {
                                            <text>Not yet generated</text>
                                        }
                                    </dd>

                                    <dt>Approved</dt>
                                    <dd>
                                        @report.ApprovedDate
                                        @if (!report.ApprovedDate.HasValue)
                                        {
                                            <text>Not yet approved</text>
                                        }
                                    </dd>

                                    <dt>Submitted</dt>
                                    <dd>

                                        @report.SubmittedDate
                                        @if (!report.SubmittedDate.HasValue)
                                        {
                                            <text>Not yet submitted</text>
                                        }
                                    </dd>

                                </dl>

                            </div>
                            <div class="col-md-6">
                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        Files
                                    </div>
                                    <div class="panel-body">
                                        <table class="table table-responsive">

                                            <thead>
                                            <tr>
                                                <th>Name</th>
                                                <th>Version</th>
                                            </tr>
                                            </thead>
                                            <tbody>

                                            @foreach (var doc in report.Documents)
                                            {
                                                <tr>
                                                    <td><a href="#" data-document-viewer data-doc-id=@doc.Id data-url="/document/@doc.Id" data-title="@doc.Filename" title="@doc.Filename" data-placement="right" data-original-title="@doc.Filename">@doc.Filename</a></td>
                                                    <td>@doc.Version</td>
                                                </tr>
                                            }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>


                            </div>
                        </div>

                    }



