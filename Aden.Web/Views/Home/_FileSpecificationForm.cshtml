@model FileSpecificationEditViewModel
<style>
    /* BEGIN: Check box in Button Styles */
    .checkbox .btn,
    .checkbox-inline .btn {
        padding-left: 2em;
        min-width: 10em;
    }

    .checkbox-inline {
        margin-left: -1.5em;
    }

        .checkbox label,
        .checkbox-inline label {
            text-align: left;
        }
    /* END: Check box in Button Styles */
</style>
<div id="specificationUpdateForm">
    @using (Ajax.BeginForm("SaveSpecification", "Home", null,
        new AjaxOptions { UpdateTargetId = "specificationUpdateForm", HttpMethod = "Post", InsertionMode = InsertionMode.Replace, OnComplete = "OnSpecificationUpdateFormComplete" },
        new { role = "form" }))
    {

        <div class="modal-dialog modal-lg">
            <div class="modal-content">

                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h3 class="modal-title">Edit Specification</h3>
                </div>

                <div class="modal-body">
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Id)
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.Id)
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.FileNumber, new { @class = "control-label" })
                                @Html.TextBoxFor(model => model.FileNumber, new { @class = "form-control", autofocus = "autofocus" })
                                @Html.ValidationMessageFor(model => model.FileNumber, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.FileName, new { @class = "control-label" })
                                @Html.TextBoxFor(model => model.FileName, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.FileName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <fieldset>
                        <legend>
                            Sources
                        </legend>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Section, new { @class = "control-label" })
                                    @Html.TextBoxFor(model => model.Section, new { @class = "form-control", autofocus = "autofocus" })
                                    @Html.ValidationMessageFor(model => model.Section, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Application, new { @class = "control-label" })
                                    @Html.TextBoxFor(model => model.Application, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Application, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Collection, new { @class = "control-label" })
                                    @Html.TextBoxFor(model => model.Collection, new { @class = "form-control", autofocus = "autofocus" })
                                    @Html.ValidationMessageFor(model => model.Collection, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.DataSource, new { @class = "control-label" })
                                    @Html.TextBoxFor(model => model.DataSource, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.DataSource, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.DataGroups, new { @class = "control-label" })
                                    @Html.TextBoxFor(model => model.DataGroups, new { @class = "form-control", autofocus = "autofocus" })
                                    @Html.ValidationMessageFor(model => model.DataGroups, "", new { @class = "text-danger" })
                                </div>
                            </div>

                        </div>
                    </fieldset>


                    <fieldset>
                        <legend>Responsible User Groups</legend>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.GenerationUserGroup, new { @class = "control-label" })
                                    @Html.TextBoxFor(model => model.GenerationUserGroup, new { @class = "form-control", autofocus = "autofocus" })
                                    @Html.ValidationMessageFor(model => model.GenerationUserGroup, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.ApprovalUserGroup, new { @class = "control-label" })
                                    @Html.TextBoxFor(model => model.ApprovalUserGroup, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.ApprovalUserGroup, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.SubmissionUserGroup, new { @class = "control-label" })
                                    @Html.TextBoxFor(model => model.SubmissionUserGroup, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.SubmissionUserGroup, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                    </fieldset>


                    <fieldset>
                        <legend>Generation Properties</legend>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.FileNameFormat, new { @class = "control-label" })
                                    @Html.TextBoxFor(model => model.FileNameFormat, new { @class = "form-control", autofocus = "autofocus" })
                                    @Html.ValidationMessageFor(model => model.FileNameFormat, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.ReportAction, new { @class = "control-label" })
                                    @Html.TextBoxFor(model => model.ReportAction, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.ReportAction, "", new { @class = "text-danger" })
                                </div>
                            </div>

                        </div>
                    </fieldset>


                </div>

                <div class="modal-footer">
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                            <input type="submit" class="btn btn-primary" value="Save changes" />
                        </div>
                    </div>
                </div>

            </div>
        </div>

    }

</div>